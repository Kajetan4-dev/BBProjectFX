<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane
        prefHeight="550.0"
        prefWidth="1000.0"
        style="-fx-background-color: #1b5e20;"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="at.ac.hcw.Game.ChoiceController">

    <!-- Top: Large title -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Spielauswahl"
                   style="-fx-font-family: 'Cinzel', cursive; -fx-font-size: 48px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center: Buttons -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 30;">
            <!-- Top row: Poker Chips + Blackjack -->
            <HBox alignment="CENTER" spacing="40">
                <Button fx:id="pokerchipsBtn" onAction="#handlePokerchipsStart"
                        text="Poker Chips"
                        prefWidth="250" prefHeight="80"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                <Button fx:id="blackjackBtn" onAction="#handleBlackjackStart"
                        text="Blackjack spielen"
                        prefWidth="250" prefHeight="80"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
            </HBox>

            <!-- Exit button centered below, smaller -->
            <Button onAction="#handleExit"
                    text="Beenden"
                    prefWidth="200" prefHeight="60"
                    style="-fx-font-size: 20px; -fx-background-radius: 8; -fx-cursor: hand;"/>
        </VBox>
    </center>

    <!-- Bottom: Copyright -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Â© 2025 BB Projects"
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>

</BorderPane>
