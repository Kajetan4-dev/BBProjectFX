<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.ChoiceController" prefHeight="300.0" prefWidth="400.0">

    <Label text="Select Your Game">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Button text="Start Blackjack" onAction="#handleBlackjack" prefWidth="150.0"/>
    <Button text="Start Pokerchips" onAction="#handlePoker" prefWidth="150.0"/>

</VBox>