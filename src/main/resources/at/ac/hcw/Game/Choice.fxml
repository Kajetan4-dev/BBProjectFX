<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="bg-dark"
            stylesheets="@/ui/poker-ui.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.hcw.Game.ChoiceController">

    <padding><Insets top="22" right="22" bottom="22" left="22"/></padding>

    <top>
        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Spielauswahl" styleClass="h1"/>
            <Label text="Wähle ein Spiel aus und leg los." styleClass="subtle"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="16" alignment="CENTER" maxWidth="520">
            <VBox styleClass="card" spacing="14">
                <Button text="Blackjack spielen" fx:id="blackjackBtn"
                        styleClass="btn,btn-blue" onAction="#handleBlackjackStart"/>
                <Button text="Poker Chips spielen" fx:id="pokerchipsBtn"
                        styleClass="btn,btn-green" onAction="#handlePokerchipsStart"/>
                <Separator/>
                <Button text="Beenden" styleClass="btn,btn-red" onAction="#handleExit"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="© 2025 BB Projects" styleClass="subtle"/>
        </HBox>
    </bottom>

</BorderPane>