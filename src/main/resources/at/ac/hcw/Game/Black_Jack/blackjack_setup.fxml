<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Black_Jack.BlackJackSetupController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Blackjack Setup"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Start Chips:"/>
        <TextField fx:id="startingMoneyField" text="1000" prefWidth="80"/>
    </HBox>

    <Label text="Players (2â€“6):"/>

    <VBox fx:id="playerListContainer" spacing="10"/>

    <HBox spacing="10">
        <Button text="+ Add Player" onAction="#handleAddPlayer"/>
        <Button text="- Remove" onAction="#handleRemovePlayer"/>
    </HBox>

    <Button text="START GAME"
            onAction="#startGame"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
</VBox>
