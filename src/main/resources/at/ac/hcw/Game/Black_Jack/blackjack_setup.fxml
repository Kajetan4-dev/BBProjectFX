<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Black_Jack.BlackJackSetupController"
      alignment="TOP_CENTER"
      prefWidth="1000.0"
      prefHeight="600.0"
      spacing="25"
      style="-fx-background-color: #f5f0e6;">

    <padding>
        <Insets top="40" right="20" bottom="40" left="20" />
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <Label text="BLACKJACK SETUP" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <HBox alignment="CENTER" spacing="10">
            <Label text="Standard Startkapital:" style="-fx-font-size: 14px;" />
            <TextField fx:id="startingMoneyField" prefWidth="80" text="500" alignment="CENTER" />
        </HBox>
    </VBox>

    <Separator maxWidth="800" />

    <VBox alignment="CENTER" spacing="15">
        <Label text="Spieler Liste" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox fx:id="playerListContainer"
              alignment="CENTER"
              spacing="20"
              minHeight="220" />
    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button text="+ Add Player" onAction="#handleAddPlayer" prefWidth="130" style="-fx-cursor: hand;" />
        <Button text="- Remove Last" onAction="#handleRemovePlayer" prefWidth="130" style="-fx-cursor: hand;" />
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

    <Button text="START GAME"
            onAction="#startGame"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 22px;
                   -fx-font-weight: bold; -fx-padding: 12 50; -fx-background-radius: 10; -fx-cursor: hand;" />

</VBox>