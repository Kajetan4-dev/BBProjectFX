<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="800" prefWidth="1200" spacing="10"
      style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Black_Jack.BlackJackTableController">

    <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text="Blackjack Table" />
    <Label fx:id="roundLabel" style="-fx-font-size: 18px; -fx-text-fill: #555; -fx-font-weight: bold;" text="Round: 1" />

    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <HBox fx:id="playerContainer" alignment="CENTER" spacing="15" style="-fx-padding: 20;" />
        </content>
    </ScrollPane>

    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dealer" />
        <HBox fx:id="dealerCardContainer" alignment="CENTER" spacing="10" />
        <Label fx:id="dealerTotalLabel" style="-fx-font-size: 18px;" text="Dealer Total: 0" />

        <Button fx:id="newRoundButton" onAction="#handleNewRound" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 30;" text="Next Round" visible="false" />
    </VBox>

</VBox>