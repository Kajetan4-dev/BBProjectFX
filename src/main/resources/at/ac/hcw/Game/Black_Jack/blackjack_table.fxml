<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="container" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="10"
      style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Black_Jack.BlackJackTableController">

    <padding>
        <Insets bottom="20" left="10" right="10" top="5" />
    </padding>

    <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text="Blackjack Table" />
    <Label fx:id="roundLabel" style="-fx-font-size: 18px; -fx-text-fill: #555; -fx-font-weight: bold;" text="Round: 1" />

    <StackPane VBox.vgrow="ALWAYS">
        <Pane fx:id="playerContainer" minHeight="400" minWidth="1000" />
    </StackPane>

    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.7); -fx-padding: 15; -fx-background-radius: 15;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dealer" />

        <HBox fx:id="dealerCardContainer" alignment="CENTER" spacing="10" style="-fx-min-height: 70;" />

        <Label fx:id="dealerTotalLabel" style="-fx-font-size: 18px;" text="Dealer Total: 0" />

        <Separator maxWidth="400" />

        <Button fx:id="newRoundButton" onAction="#handleNewRound"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 30; -fx-cursor: hand;"
                text="Next Round" visible="false" />
    </VBox>

</VBox>