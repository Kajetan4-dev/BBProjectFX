<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Black_Jack.BlackJackTableController">

    <Label text="Blackjack Tisch" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- Button fÃ¼r neue Runde rechts -->

    <HBox alignment="TOP_RIGHT">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button fx:id="newRoundButton" text="Neue Runde starten" onAction="#handleNewRound" visible="true"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER">
        <Label text="Dealer" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Label fx:id="dealerTotalLabel" text="Dealer Total: 0"/>
        <!-- Dealer-Karten-Anzeige hier -->
    </VBox>

    <Separator/>

    <HBox fx:id="playersContainer" spacing="30" alignment="CENTER" />

    <Separator/>






</VBox>
