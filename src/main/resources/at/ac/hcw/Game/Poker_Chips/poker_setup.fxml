<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Poker_Chips.PokerSetupController"
      style="-fx-background-color: #f5f0e6; -fx-border-color: black; -fx-border-width: 1;"
      prefWidth="1000" prefHeight="550">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Wie viele Spieler?"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- Blinds Input -->
    <HBox spacing="20" alignment="CENTER">
        <VBox>
            <Label text="Big Blind"/>
            <TextField fx:id="bigBlindField" promptText="50"/>
        </VBox>
        <VBox>
            <Label text="Small Blind"/>
            <TextField fx:id="smallBlindField" promptText="25"/>
        </VBox>
    </HBox>

    <!-- Top buttons: Add/Remove/Start Game -->
    <HBox spacing="20" alignment="CENTER">

        <Button text="Spieler hinzufÃ¼gen"
                onAction="#handleAddPlayer"
                style="-fx-border-color: green; -fx-border-width: 2; -fx-font-weight: bold;"/>

        <Button text="Spieler entfernen"
                onAction="#handleRemovePlayer"
                style="-fx-border-color: red; -fx-border-width: 2; -fx-font-weight: bold;"/>

        <Button text="Spiel starten"
                onAction="#handleStartGame"
                style="-fx-border-color: green; -fx-border-width: 2; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Player cards container: two columns -->
    <HBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
        <VBox fx:id="leftColumn" spacing="15"/>
        <VBox fx:id="rightColumn" spacing="15"/>
    </HBox>

</VBox>
