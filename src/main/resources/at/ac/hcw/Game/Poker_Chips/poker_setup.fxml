<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="550" prefWidth="1000" spacing="15" style="-fx-background-color: #f5f0e6; -fx-border-color: black; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.Game.Poker_Chips.PokerSetupController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <HBox alignment="BOTTOM_RIGHT">
      <children>
      
          <!-- Title -->
          <Label prefHeight="40.0" prefWidth="551.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Wie viele Spieler?" />
         <Button mnemonicParsing="false" onAction="#handleGoToSettings" prefHeight="55.0" prefWidth="60.0" style="-fx-font-size: 25px; -fx-border-color: Black; -fx-border-width: 2;" text="⚙" />
      </children>
   </HBox>

    <!-- Blinds Input -->
    <HBox alignment="CENTER" spacing="20">
        <VBox>
            <Label text="Big Blind" />
            <TextField fx:id="bigBlindField" promptText="50" />
        </VBox>
        <VBox>
            <Label text="Small Blind" />
            <TextField fx:id="smallBlindField" promptText="25" />
        </VBox>
    </HBox>

    <!-- Top buttons: Add/Remove/Start Game -->
    <HBox alignment="CENTER" spacing="20">

        <Button onAction="#handleAddPlayer" style="-fx-border-color: green; -fx-border-width: 2; -fx-font-weight: bold;" text="Spieler hinzufügen" />

        <Button onAction="#handleRemovePlayer" style="-fx-border-color: red; -fx-border-width: 2; -fx-font-weight: bold;" text="Spieler entfernen" />

        <Button onAction="#handleStartGame" style="-fx-border-color: green; -fx-border-width: 2; -fx-font-weight: bold;" text="Spiel starten" />
    </HBox>

    <!-- Player cards container: two columns -->
    <HBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
        <VBox fx:id="leftColumn" spacing="15" />
        <VBox fx:id="rightColumn" spacing="15" />
    </HBox>

</VBox>
