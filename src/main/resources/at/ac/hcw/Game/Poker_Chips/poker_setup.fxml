<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.hcw.Game.Poker_Chips.PokerSetupController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Poker Game Setup" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Start Chips:"/>
        <TextField fx:id="startingMoneyField" text="1000" prefWidth="80"/>
    </HBox>

    <Separator/>

    <Label text="Players (2-6):"/>
    <VBox fx:id="playerListContainer" spacing="10" alignment="CENTER" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="+ Add Player" onAction="#handleAddPlayer"/>
        <Button text="- Remove" onAction="#handleRemovePlayer"/>
    </HBox>

    <Separator/>

    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <Label text="Big Blind:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="bigBlindField" text="50" prefWidth="60" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Small Blind:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="smallBlindField" text="20" prefWidth="60" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="START GAME" onAction="#handleStartGame" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>